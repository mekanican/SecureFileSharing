{
  // Exclude __pycache__ from explorer
  "files.exclude": {
      "**/__pycache__": true
  },

  // Show vertical line after 79 to visualize end of line
  "editor.rulers": [
      79
  ],

  // Improve brackets displaying
  "editor.bracketPairColorization.enabled": true,

  // Disable pylance type checking because I want to use pylint for this
  "python.analysis.typeCheckingMode": "off",

  // Display inline hints for types of returned values
  "python.analysis.inlayHints.functionReturnTypes": true,

  // Enable linting with flake8 and pylint
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": true,

  // Enable automatic imports formatting after saving
  "[python]": {
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      },
  },

  // Enable automatic trimming of trailing whitespace
  "editor.trimAutoWhitespace": true,

  // Enable automatic insertion of final newline
  "files.insertFinalNewline": true,

